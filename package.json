{
  "name": "be-my-team-mate-app",
  "version": "1.0.3",
  "scripts": {
    "ng": "ng",
    "sync:app-version": "node scripts/sync-app-version.mjs",
    "sync:runtime-config": "node scripts/generate-runtime-config.mjs",
    "prestart": "npm run sync:app-version && npm run sync:runtime-config",
    "start": "ng serve",
    "prebuild": "npm run sync:app-version && npm run sync:runtime-config",
    "build": "ng build",
    "prewatch": "npm run sync:app-version && npm run sync:runtime-config",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "migrate:group-members": "node scripts/migrations/migrate-group-members.js",
    "migrate:fcm-tokens": "node scripts/migrations/migrate-fcm-tokens.js",
    "migrate:usernames": "node scripts/migrations/migrate-usernames.js",
    "validate:usernames": "node scripts/migrations/validate-usernames.js"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "20.2.14",
    "@angular/common": "20.3.15",
    "@angular/compiler": "20.3.15",
    "@angular/core": "20.3.15",
    "@angular/fire": "^20.0.1",
    "@angular/forms": "20.3.15",
    "@angular/platform-browser": "20.3.15",
    "@angular/router": "20.3.15",
    "@angular/service-worker": "20.3.15",
    "exceljs": "^4.4.0",
    "firebase": "^11.10.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "xlsx": "^0.18.5",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "20.3.13",
    "@angular/cli": "20.3.13",
    "@angular/compiler-cli": "20.3.15",
    "@types/jasmine": "~5.1.0",
    "autoprefixer": "^10.4.23",
    "firebase-admin": "^12.5.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.9.2"
  }
}
